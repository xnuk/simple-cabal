{{{ header }}}
build-type: Simple
cabal-version: 1.12

{{#lib}}
library
  hs-source-dirs: {{{ lib.src }}}
  exposed-modules: {{{ lib.expose }}}
{{#lib.other}}
  other-modules: {{{ lib.other }}}
{{/lib.other}}
  ghc-options: -Wall
  build-depends: {{{ lib.depend }}}
  default-language: Haskell2010
{{#lib.extension}}
  default-extensions: {{{ lib.extension }}}
{{/lib.extension}}
{{/lib}}

{{#exe}}
executable {{{ exe.name }}}
  hs-source-dirs: {{{ exe.src }}}
  main-is: {{{ exe.main }}}
  ghc-options: -Wall -threaded -rtsopts -with-rtsopts=-N -O2
  build-depends: {{{ exe.depend }}}
{{#exe.other}}
  other-modules: {{{ exe.other }}}
{{/exe.other}}
  default-language: Haskell2010
{{#exe.extension}}
  default-extensions: {{{ exe.extension }}}
{{/exe.extension}}
{{/exe}}

{{#test}}
test-suite {{{ test.name }}}
  type: exitcode-stdio-1.0
  hs-source-dirs: {{{ test.src }}}
  main-is: {{{ test.main }}}
  build-depends: {{{ test.depend }}}
{{#test.other}}
  other-modules: {{{ test.other }}}
{{/test.other}}
  ghc-options: -threaded -rtsopts -with-rtsopts=-N
  default-language: Haskell2010
{{#test.extension}}
  default-extensions: {{{ test.extension }}}
{{/test.extension}}
{{/test}}

{{#git}}
source-repository head
  type: git
  location: {{{ git }}}
{{/git}}
